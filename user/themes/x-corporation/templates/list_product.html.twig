{% extends 'partials/base.html.twig' %}

{% block content %}
<div class="single-page-title">
    <div class="container text-center">
        <h1>{{ page.title }}</h1>
    </div>
</div>

<div class="ptb-40">
    <div class="container">
        <div class="row">
            <div class="product-list"> 
                {% set collection = page.collection() %}  
                {% for p in collection %}                                   
                    <div class="product-item grid-4">
                       <a href="{{ p.url }}">
                             {{ p.media.images[p.header.thumbnail].cropZoom(266, 200).html() }}
                        </a>
                        <h2 class="product-title"><a href="{{ p.url }}">{{ p.title }}</a></h2>
                        <p class="product-price">{{ p.header.price }}</p>
                    </div>
                {% endfor %}            
            </div>
        </div>
    </div>
</div>
{% endblock %}