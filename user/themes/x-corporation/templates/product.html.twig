{% extends 'partials/base.html.twig' %}

{% block content %}
{% if page.header.background_image != '' %}
    {% set background_html = 'style="background-image: url(' ~ page.media.images[page.header.background_image].url ~ ');"' %}
{% else %}
    {% set  background_html = "" %}
{% endif %}
<section class="single-page-title"{{ background_html }}>
    <div class="container text-center">
       <h2>{{ page.title }}</h2>
    </div>
</section>
<section class="ptb-40">
<div class="container">    
        <div class="col-sm-6 product-image-feature">
            <img class="img-responsive" src="{{page.media.images[page.header.thumbnail].url}}" >
        </div>
        <div class="col-sm-6 product-main-info">
            <h2>{{ page.title }}</h2>
            <p class="price"><span class="money">{{ page.header.price }}</span> <span class="state">{{ page.header.state }}</span></p>
            <button class="read-more" data-toggle="modal" data-target="#myModal">Đặt Mua</button>
        </div>
        <!-- Modal -->
        <div id="myModal" class="modal fade" role="dialog">
          <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Đặt Mua</h4>
              </div>
              <div class="modal-body">
                <form name="product-form" action="/giahan/san-pham/o-cam-thong-minh-lumi" method="POST" id="product-form">
                    <div class="row">
                        <input data-grav-field="hidden" data-grav-disabled="false" type="hidden" class="input" name="data[url]" value="http://localhost/giahan/san-pham/o-cam-thong-minh-lumi">
                        <input data-grav-field="hidden" data-grav-disabled="false" type="hidden" class="input" name="data[product_name]" value="Ổ Cắm Thông Minh Lumi">
                        <div class="col-md-12">
                            <div class="form-group user-name">
                                <label for="name" class="sr-only">Tên của bạn</label>
                                <input name="data[name]" value="" type="text" class="form-control form-control" placeholder="Tên của bạn" required="required">
                            </div>
                            <div class="form-group user-phone">
                                <label for="phone" class="sr-only">Số Điện Thoại</label>
                                <input name="data[phone]" value="" type="text" class="form-control form-control" placeholder="Số Điện Thoại" required="required">
                            </div>
                            <div class="form-group user-email">
                                <label for="email" class="sr-only">Email</label>
                                <input name="data[email]" value="" type="email" class="form-control form-control" placeholder="Email">
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group user-message">
                                <label for="message" class="sr-only">Địa Chỉ Nhận Hàng</label>
                                <textarea class="form-control" name="data[message]" placeholder="Địa Chỉ Nhận Hàng" rows="2"></textarea>
                            </div>
                        </div>
                    </div>
                    <input type="hidden" name="__form-name__" value="product-form">
                        <div class="buttons">
                            <button class="btn btn-primary" type="submit">
                                Đặt Mua
                            </button>                    
                        </div>                    
                    <input type="hidden" name="__unique_form_id__" value="jNvyriSQZY18nOVad5zk">  <input type="hidden" name="form-nonce" value="3e51ade3aa31d0a73d3b1ce0eb37601d">
                    </form>
              </div>              
            </div>

          </div>
        </div>
        <!-- END Modal -->
        <div class="col-xs-12 tabWhy no-padding">
            <h3>{{ page.header.why_heading }}</h3>
            <div role="tabpanel">
                <ul id="tabWhy" class="nav nav-tabs nav-justified">
                    <li class="active">
                        <a href="#tabWhy1" data-toggle="tab" aria-expanded="true">
                            Đặc Điểm Nổi Bật
                        </a>
                    </li>   
                    <li class="">
                        <a href="#tabWhy2" data-toggle="tab" aria-expanded="true">
                            Thông Số Kỹ Thuật
                        </a>
                    </li>
                    <li class="">
                        <a href="#tabWhy3" data-toggle="tab" aria-expanded="true">
                            Hình Ảnh
                        </a>
                    </li>                
                </ul>

                <div class="tab-content">                  
                    <div class="product-content tab-pane fade active in" id="tabWhy1">
                        {{ page.content|markdown }}
                    </div>
                    <div class="tab-pane fade" id="tabWhy2">
                       
                    </div>
                    <div class="tab-pane fade" id="tabWhy3">
                        {% for item in page.header.gallery %}

                        {% endfor %}
                    </div>
                </div>
            </div>            
        </div>
</div>
{% set collection = page.collection() %}
<div class="container ptb-40">
  <h1><b>Sản phẩm khác</b></h1>
  <div class="row">
    <div class="col-xs-12">
        <div class="product-recomended">
          <div class="carousel slide multi-item-carousel" id="theCarousel">
            <div class="carousel-inner">

                {% for p in collection %}
                    {% if loop.first %}
                        <div class="item active">
                            <div class="col-sm-4">
                                {{ p.media.images[p.header.thumbnail].lightbox(1024,auto).cropZoom(266, 200).html() }}</br>
                                <a class="product-link" href="{{ p.url }}">{{ p.title }}</a>
                            </div>
                        </div>
                    {% else %}          
                        <div class="item">
                            <div class="col-sm-4">
                                {{ p.media.images[p.header.thumbnail].lightbox(1024,auto).cropZoom(266, 200).html() }}</br>
                                <a class="product-link" href="{{ p.url }}">{{ p.title }}</a>
                            </div>
                        </div>
                    {%endif%}
                {% endfor %} 
            </div>
            <a class="left carousel-control" href="#theCarousel" data-slide="prev"><i class="glyphicon glyphicon-chevron-left"></i></a>
            <a class="right carousel-control" href="#theCarousel" data-slide="next"><i class="glyphicon glyphicon-chevron-right"></i></a>
          </div>
        </div>
    </div>
  </div>
</div>
</section>
   
{% endblock %}
{% do assets.add('theme://js/product-form.js') %}