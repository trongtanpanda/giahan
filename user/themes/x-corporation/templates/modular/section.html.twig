
{% set bg_image = "" %}
{% set bg_color = "" %}
{% set color = "" %}
{% if page.media.images[header.background].url != "" %}
   {% set bg_image ="background-image:url('" ~ page.media.images[header.background].url ~ "');" %}
{% endif %}
{% if page.header.bgcolor != "" %}
    {% set bg_color = "background-color:" ~ page.header.bgcolor ~ ";" %}
{% endif %}
{% if page.header.color != "" %}
    {% set color = "color:" ~ page.header.color ~ ";" %}
{% endif %}

<div class="x-section" style="{{ bg_image ~ bg_color ~ color }}">
    <div class="section-title">
        <div class="container text-center">
            <h2 style="color: {{ page.header.color }}"><strong>{{ page.title }}</strong></h2>
            <span class="bordered-icon"><i class="fa fa-circle-thin"></i></span>
        </div>
    </div>
    <div class="container">
        <div class="row">      
            {% if page.header.align == 'left' %}
                {% set class = 'col-sm-6 left' %}
            {% elseif page.header.align == 'right' %}  
                {% set class = 'col-sm-6 col-sm-offset-6' %}
            {% else %} 
                {% set class = 'col-sm-6 col-sm-offset-3' %}
            {% endif %}
            <div class="{{ class }}">               
                <div class="promo-block-wrapper clearfix">                    
                    <div class="promo-content">
                        {% if page.header.thumbnail != "" %}
                            <img class="img-responsive" src="{{ page.media.images[header.thumbnail].url}}" alt="{{page.title}}">
                        {% endif %}
                        {{ page.content }}
                        <a class="{{ header.type }}" href="{{ header.url }}" target="{{ header.target }}" >{{ header.url_text }}</a> 
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
